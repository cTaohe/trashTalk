<div class="conainer">
  <h1 class="text-center">你想對誰說幹話?</h1>
  <div class="container">
    <form action="/" method="POST">
      <div class="form-group row justify-content-around">        
          {{#each characters}}
            <div class="card" style="width: 18rem;">
              <img class="card-img-top" src="{{ this.image }}" alt="{{ this.job_en }}">
              <div class="card-body">
                <input type="radio" class="" id="{{ this.job_en }}" name="job" value="{{ this.job_en }}">
                <label class="" for="job">{{ this.job }}</label>
              </div>
            </div>
          {{/each}}
      </div>

      <div class="form-group row m-5">
        <button class="btn btn-primary m-5" type="submit">產生幹話</button>
        <div class="alert alert-info col text-center align-self-center" role="alert">
          {{ trashSentence }}
        </div>
      </div>
    </form>

  </div>
</div>