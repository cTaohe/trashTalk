<div class="conainer">
  <h1 class="text-center text-warning m-5">你想對誰說幹話?</h1>
  <div class="container">

    <!-- display character here-->
    <form action="/" method="POST">
      <div class="form-group row justify-content-around">

          <!-- each loop -->      
          {{#each characters}}
            <div class="card" style="width: 18rem;">
              <div class="picture">
                <img class="card-img-top" src="{{ this.image }}" alt="{{ this.job_en }}">
              </div>
              <div class="card-body text-center bg-info text-white">
                <input type="radio" id="{{ this.job_en }}" name="job" value="{{ this.job_en }}" {{ifEquals this.job_en ../job}}>
                <label for="job">{{ this.job }}</label>
              </div>
            </div>
          {{/each}}
      </div>

      <div class="form-group row m-5">
        <button class="btn btn-success m-5" type="submit">產生幹話</button>

        <!-- display sentence here -->
        <div class="alert alert-info col" role="alert">
          <textarea class="form-control" id="trashTalkResult" rows="3" readonly>{{ trashSentence }}</textarea>
        </div>
      </div>
    </form>

  </div>
</div>